{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "esnext",
    "jsx": "react",
    "target": "esnext",
    "allowJs": true,
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "typeRoots": ["node_modules/@types", "../types/dist/**"]
  },
  "references": [
    {
      "path": "../types"
    }
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx", "../types/dist/**/*.ts", "../types/dist/**/*.d.ts"],
  "exclude": ["src/__tests__/**", "dist"]
}
