{
  "compilerOptions": {
    "incremental": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": true,
    "lib": ["ESNext"],
    "esModuleInterop": true,
    // "strictNullChecks": true,
    // "noImplicitReturns": true,
    "noImplicitThis": true,
    // "noImplicitAny": false,
    // "noUnusedLocals": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "references": [
    {
      "path": "packages/shared-server"
    }
  ],
  "exclude": ["node_modules", "dist"]
}
