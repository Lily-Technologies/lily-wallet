{
  "private": true,
  "version": "1.0.8",
  "name": "lily-monorepo",
  "author": "Lily Technologies, Inc. <help@lily-wallet.com> (https://lily-wallet.com)",
  "description": "Lily is the best way to secure your Bitcoin",
  "license": "Custom",
  "packageManager": "yarn@3.1.0",
  "engines": {
    "node": "16.13.0"
  },
  "scripts": {
    "electron": "yarn workspace LilyWallet start",
    "frontend": "yarn workspace lily-frontend run start",
    "express": "yarn workspace express run start",
    "build:electron": "yarn workspace LilyWallet build",
    "build:frontend": "yarn workspace lily-frontend run build",
    "build:express": "yarn workspace express run build",
    "build:types": "yarn workspace @lily/types run build",
    "build:shared-server": "yarn workspace @lily/shared-server run build"
  },
  "homepage": "./",
  "workspaces": [
    "./packages/*"
  ],
  "nohoist": [
    "**/types"
  ],
  "dependencies": {
    "@lily/shared-server": "workspace:^",
    "@lily/types": "workspace:^"
  }
}
