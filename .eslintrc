{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": ["eslint:recommended"],
  "plugins": ["@typescript-eslint"],
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "no-undef": "off",
    "no-unused-vars": "off",
    "no-empty": "off",
    "no-extra-boolean-cast": "off"
  },
  "ignorePatterns": ["dist", "node_modules", "examples", "scripts"]
}
