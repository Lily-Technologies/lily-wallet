{
  "name": "@lily/electron",
  "author": "Lily Technologies, Inc. <help@lily-wallet.com> (https://lily-wallet.com)",
  "description": "Lily is the best way to secure your Bitcoin",
  "license": "Custom",
  "version": "1.2.0",
  "private": true,
  "main": "./build/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "start-dev": "DEVURL=true electron .",
    "start-testnet": "TESTNET=true electron .",
    "build": "tsc -b && cp -R ../frontend/build/ ./build/frontend",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -m"
  },
  "build": {
    "productName": "Lily Wallet",
    "appId": "com.lily-wallet.lily",
    "npmRebuild": false,
    "electronVersion": "16.0.6",
    "extends": null,
    "afterSign": "./afterSignHook.js",
    "protocols": {
      "name": "lily-wallet",
      "schemes": [
        "lily"
      ]
    },
    "mac": {
      "category": "public.app-category.finance",
      "icon": "./src/assets/AppIcon.icns",
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./entitlements.mac.inherit.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "Allow your camera to scan QR codes during account setup and transaction signing."
      },
      "files": [
        "./build/**/*",
        "./src/preload.js",
        {
          "from": "../../packages/HWIs/HWI_MAC",
          "to": "./build/HWIs"
        }
      ],
      "protocols": [
        {
          "name": "Lily Wallet",
          "schemes": [
            "lily"
          ]
        },
        {
          "name": "Bitcoin",
          "schemes": [
            "bitcoin"
          ]
        }
      ]
    },
    "dmg": {
      "background": "./src/assets/background.png",
      "sign": false
    },
    "linux": {
      "category": "Finance",
      "packageCategory": "wallet",
      "icon": "./src/assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": "x64"
        }
      ],
      "files": [
        "./build/**/*",
        "./src/preload.js",
        {
          "from": "../../packages/HWIs/HWI_LINUX",
          "to": "./build/HWIs"
        }
      ],
      "protocols": [
        {
          "name": "Lily Wallet",
          "schemes": [
            "lily"
          ]
        },
        {
          "name": "Bitcoin",
          "schemes": [
            "bitcoin"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "defaultArch": "x64",
      "icon": "./src/assets/AppIcon.icns",
      "files": [
        "./build/**/*",
        "./src/preload.js",
        {
          "from": "../../packages/HWIs/HWI_WINDOWS",
          "to": "./build/HWIs"
        }
      ],
      "protocols": [
        {
          "name": "Lily Wallet",
          "schemes": [
            "lily"
          ]
        },
        {
          "name": "Bitcoin",
          "schemes": [
            "bitcoin"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@lily-technologies/lnrpc": "^0.14.1-beta.14",
    "@lily/shared-server": "*",
    "@lily/types": "*",
    "axios": "^0.24.0",
    "electron-notarize": "^1.1.1",
    "moment": "^2.29.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron/rebuild": "^3.2.10",
    "electron": "^16.0.6",
    "electron-builder": "^23.3.3",
    "electron-devtools-installer": "^3.2.0",
    "electron-installer-dmg": "^3.0.0",
    "electron-mock-ipc": "^0.3.11",
    "electron-packager": "^17.1.1",
    "electron-reloader": "^1.2.3",
    "electron-winstaller": "^5.0.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^electron$": "<rootDir>/src/__tests__/mock/electron-mock.ts"
    }
  }
}
